{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.foldingImportsByDefault": true,

  "files.exclude": {
    "node_modules": true,
    "**/package-lock.json": true,
    "**/tsconfig.json": true,
    "**/.eslintrc.js": true
  },

  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  }
}
